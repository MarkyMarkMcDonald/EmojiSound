{
  "name": "EmojiSound",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Adds sounds when emojis appear on the page",
  "homepage_url": "https://github.com/MarkyMarkMcDonald/EmojiSound",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "TSRWPCX",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
      ],
      "persistent": true
  },
  "permissions": [
    "https://app.slack.com/*"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "https://app.slack.com/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ]
}

